@inherits LayoutComponentBase

<MudThemeProvider Theme="AvaTheme.Default" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="navbar-underlined">
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudIconButton Icon="@AvaTheme.AvLogo" Color="Color.Inherit" Class="pa-1"/>
        <MudText Class="app-name">AV&thinsp;&ndash;&thinsp;Adressverwaltung</MudText>
        <MudSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
