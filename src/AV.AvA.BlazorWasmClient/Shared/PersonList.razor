@using AV.AvA.Model
<MudList Clickable="true">
	@if (PersonVersions == null)
	{
		<MudListItem Icon="@Icons.Material.Filled.AccountCircle" Disabled="true">
			<MudSkeleton />
		</MudListItem>
		<MudListItem Icon="@Icons.Material.Filled.AccountCircle" Disabled="true">
			<MudSkeleton />
		</MudListItem>
		<MudListItem Icon="@Icons.Material.Filled.AccountCircle" Disabled="true">
			<MudSkeleton />
		</MudListItem>
	}
	else
	{
		@foreach (var pv in PersonVersions ?? Enumerable.Empty<PersonVersion>())
		{
			var detailHref = $"/Details/{pv.AvId}";
			var editHref = $"/Edit/{pv.AvId}";
			var p = pv.Person;
			<MudListItem Href="@detailHref" Icon="@Icons.Material.Filled.AccountCircle">
				@p.Vorname
				@p.Zweitnamen
				@p.NachnamePraefix
				@p.Nachname
				<MudIconButton Link="@editHref" Icon="@Icons.Material.Filled.Edit" Size="Size.Small" Edge="Edge.End" Class="mx-3" />
			</MudListItem>
		}
	}

</MudList>

@code {
	[Parameter]
	public IReadOnlyCollection<PersonVersion>? PersonVersions { get; set; }
}
